{{>header}}
<title>CRUD APP | Home</title>
{{>navbar}}

<div class="container-fluid mid-section">
    <h5 class="background text-center p-2 text-light mt-1">Employee Record</h5>
    {{#if data.length }}
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Designation</th>
                    <th>Salary</th>
                    <th>City</th>
                    <th>State</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    <td>{{phone}}</td>
                    <td>{{dsg}}</td>
                    <td>{{salary}}</td>
                    <td>{{city}}</td>
                    <td>{{state}}</td>
                    <td><a href="/edit/{{_id}}" class="btn btn-sm btn-primary"><span
                                class="material-symbols-outlined">edit</span></a></td>
                    <td><a href="/delete/{{_id}}" class="btn btn-sm btn-danger"><span
                                class="material-symbols-outlined">delete_forever</span></a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <p class="text-center">No Data Found to Display</p>
    {{/if}}
</div>

{{>footer}}